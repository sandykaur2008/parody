<!DOCTYPE html>
<html>
  <% include partials/head %>
  <body>
    <% include partials/header %>
    <main class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Forgot Password</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <% if (messages) { %>
            <p class="red"><%= messages %></p>
          <% } %>
          <% for (var i=0; i < errors.length; i++) { %>
            <p class="red"><%= errors[i].msg %></p>
          <% } %>
        </div>
      </div> 
      <div class="row">
        <div class="col-md-12">
          <form name='pswdrequestForm' method="post" action="/auth/forgot">
            <p><input type='text' id="email" name="email"/></p> 
            <p><label for"email">Email</label></p>
            <p><input type='submit' value='Submit'/></p>
            <input type='hidden' name="_csrf" value="<%= csrftoken %>"/>
          </form>
        </div>
      </div> 
    </main>
  </body> 
</html>